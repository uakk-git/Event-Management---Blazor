@using EventEase.Models
@inject NavigationManager Navigation

<div class="event-card @(Event?.IsAvailable == false ? "event-card--full" : "")">
    @if (Event is not null)
    {
        <div class="event-card__header">
            <h3 class="event-card__title">@Event.Name</h3>
            @if (!Event.IsAvailable)
            {
                <span class="badge badge--full">Full</span>
            }
            else
            {
                <span class="badge badge--open">Open</span>
            }
        </div>

        <div class="event-card__body">
            <p><span class="icon">ğŸ“…</span> <strong>Date:</strong> @Event.Date.ToString("MMMM dd, yyyy")</p>
            <p><span class="icon">ğŸ“</span> <strong>Location:</strong> @Event.Location</p>
            <p><span class="icon">ğŸ‘¥</span> <strong>Spots:</strong> @(Event.Capacity - Event.AttendeesCount) remaining of @Event.Capacity</p>

            @if (!string.IsNullOrWhiteSpace(Event.Description))
            {
                <p class="event-card__desc">@Event.Description</p>
            }
        </div>

        <div class="event-card__footer">
            <button class="btn btn--secondary" @onclick="ViewDetails">View Details</button>
            <button class="btn btn--primary" @onclick="Register" disabled="@(!Event.IsAvailable)">
                @(Event.IsAvailable ? "Register" : "Fully Booked")
            </button>
        </div>
    }
    else
    {
        <p class="event-card__placeholder">No event data available.</p>
    }
</div>

@code {
    [Parameter, EditorRequired]
    public Event? Event { get; set; }

    private void ViewDetails()
    {
        if (Event is not null)
            Navigation.NavigateTo($"/events/{Event.Id}");
    }

    private void Register()
    {
        if (Event is not null && Event.IsAvailable)
            Navigation.NavigateTo($"/register/{Event.Id}");
    }
}